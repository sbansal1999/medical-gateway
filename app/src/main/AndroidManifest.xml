<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medicalgateway">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedicalGateway">
        <activity android:name=".DoctorPortalActivity" />
        <activity android:name=".StaffPortalActivity" />
        <activity android:name=".PatientPortalActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ImageSliderActivity" />
        <activity android:name=".RegisterActivity">
            <meta-data android:name="com.google.android.safetynet.ATTEST_API_KEY" android:value="@string/safety_net_api_key"/>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashActivity" />
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
    </application>


</manifest>